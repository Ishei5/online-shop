<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>online-shop</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>online-shop</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>com.pankov.roadtosenior.onlineshop.web.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/product/add</url-pattern>
        <url-pattern>/product/edit</url-pattern>
        <url-pattern>/product/remove</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>com.pankov.roadtosenior.onlineshop.web.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/cart/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>guestFilter</filter-name>
        <filter-class>com.pankov.roadtosenior.onlineshop.web.filter.GuestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>guestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>